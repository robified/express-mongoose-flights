<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
    <label for="airline">Airline</label>
    <select name="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
    </select>

    <label for="flightNo">Flight Number (10 to 9999):</label>
    <input type="text" name="flightNo">

    <label for="departs">Choose a date and time for your departure:</label>
    <input type="datetime-local" id="meeting-time" name="meeting-time" value="2019-08-18T15:11" min="2019-08-07T00:00" max="2020-08-14T00:00">
    <input type="submit" value="Add Flight">
</form>

